<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="readApp.activity"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/library"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar" >
        <activity
            android:name="readApp.activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="readApp.activity.ShelfActivity"
            android:label="@string/title_activity_shelf" >
        </activity>
        <activity
            android:name="readApp.activity.ShopActivity"
            android:label="@string/title_activity_shop" >
        </activity>
        <activity
            android:name="readApp.activity.ReadActivity"
            android:label="@string/title_activity_read" >
        </activity>
        <activity
            android:name="readApp.activity.NoteActivity"
            android:label="@string/title_activity_note" >
        </activity>
        <activity
            android:name="readApp.activity.SetActivity"
            android:label="@string/title_activity_set" >
        </activity>
        <activity
            android:name="readApp.activity.CreateActivity"
            android:label="@string/title_activity_creat" >
        </activity>
        <activity
            android:name="readApp.activity.LoginActivity"
            android:label="@string/title_activity_load" >
        </activity>
    </application>

</manifest>
